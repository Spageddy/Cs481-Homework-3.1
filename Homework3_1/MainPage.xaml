<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Homework3_1"
    x:Class="Homework3_1.MainPage">
    <StackLayout>
         <Image
            Source="pets.png"
            HorizontalOptions="CenterAndExpand"
            HeightRequest="400"
           
            /> 
        <StackLayout VerticalOptions="Center">
        <Label
            Text="Please select ur pet!"
            VerticalOptions="Center"
            HorizontalOptions="Center"
                
            />
        <Button
            x:Name="dogButton"
            VerticalOptions="Center"
            Text="dog"
            Clicked="Dog_Clicked"
           HorizontalOptions="Center"
              WidthRequest="100"
             HeightRequest="40" 
                BackgroundColor="Silver"
                TextColor="White"
            />
        <Button
            x:Name="catButton"
            VerticalOptions="Center"
            Text="cat"
            Clicked="Cat_Clicked"
           HorizontalOptions="Center"
              WidthRequest="100"
             HeightRequest="40" 
                BackgroundColor="Silver"
                TextColor="White"
                
            />
            </StackLayout>
        </StackLayout>
</ContentPage>